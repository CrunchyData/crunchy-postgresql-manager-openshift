{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "cpm-admin",
        "creationTimestamp": null,
        "annotations": {
            "description": "cpm-admin pod",
            "iconClass": "icon-database",
            "tags": "database,postgresql,replication"
        }
    },
    "parameters": [
    {
        "name": "PG_MODE",
        "description": "The mode we are running PG in",
        "value": "standalone"
    }, {
        "name": "PG_USER",
        "description": "The username that clients will use to connect to PG server",
        "value": "testuser"
    }, {
        "name": "PG_PASSWORD",
        "description": "The password for the PG master user",
        "generate": "expression",
        "from": "[a-zA-Z0-9]{12}"
    }, {
        "name": "PG_DATABASE",
        "description": "The name of the database that will be created",
        "value": "userdb"
    }, {
        "name": "PG_ROOT_PASSWORD",
        "description": "The password for the PG administrator",
        "generate": "expression",
        "from": "[a-zA-Z0-9]{12}"
    }],

    "objects": [ 
{
        "kind": "Service",
        "apiVersion": "v1",
        "metadata": {
            "name": "cpm-admin",
            "labels": {
                "name": "cpm-admin"
            }
        },
        "spec": {
            "ports": [
		{
                "name": "admin-port",
                "protocol": "TCP",
                "port": 13001,
                "targetPort": 13001,
                "nodePort": 0
            	},
		{
                "name": "db-port",
                "protocol": "TCP",
                "port": 5432,
                "targetPort": 5432,
                "nodePort": 0
            	}
		],
            "selector": {
                "name": "cpm-admin"
            },
            "portalIP": "None",
            "type": "ClusterIP",
            "sessionAffinity": "None"
        },
        "status": {
            "loadBalancer": {}
        }
}, 
{
    "kind": "Pod",
    "apiVersion": "v1",
    "metadata": {
        "name": "cpm-admin",
        "labels": {
            "name": "cpm-admin"
        }
    },
    "spec": {
        "containers": [{
            "name": "cpm-admin",
            "image": "crunchydata/cpm-admin-os",
            "ports": [{
                "containerPort": 5432,
                "protocol": "TCP"
            }],
                       "env": [
			{
                            "name": "PG_MODE",
                            "value": "${PG_MODE}"
                        }, {
                            "name": "DB_USER",
                            "value": "postgres"
                        }, {
                            "name": "CPMBASE",
                            "value": "/var/cpm"
                        }, {
                            "name": "DOMAIN",
                            "value": "pgproject.svc.cluster.local"
                        }, {
                            "name": "DB_PORT",
                            "value": "5432"
                        }, {
                            "name": "DB_HOST",
                            "value": "127.0.0.1"
                        }, {
                            "name": "OPENSHIFT_URL",
                            "value": "https://192.168.10.100:8443"
                        }, {
                            "name": "PG_DATABASE",
                            "value": "${PG_DATABASE}"
                        }, {
                            "name": "PG_ROOT_PASSWORD",
                            "value": "${PG_ROOT_PASSWORD}"
                        }],
        "securityContext": {
        },


            "volumeMounts": [{
                "mountPath": "/pgdata",
                "name": "pgdata",
                "readOnly": false
            }]
        }],
        "volumes": [{
            "name": "pgdata",
                "emptyDir": { }
        }]
    }
}
]
}
